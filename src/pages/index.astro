---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="max-w-2xl mx-auto px-6 py-12">
			<div class="flex items-center justify-center mb-12">
				<img class="w-32 h-32 rounded-full mr-6 object-cover flex-shrink-0 portrait-ring" src="/darwin.jpg" alt="Charles Cheung">
				<div>
					<h1 class="text-4xl font-bold mb-2">Charles Cheung</h1>
					<p class="text-base text-gray-600">Scientist / Developer</p>
				</div>
			</div>

			<div class="rounded-lg p-6 mb-8">
				<h2 class="text-xl font-semibold mb-4">About</h2>
				<div class="space-y-4 text-gray-700 leading-relaxed">
					<p>
						Charles is a scientist of <a href="https://mariannasafronova.com/" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800 underline">the Safronova group</a> at the University of Delaware. His research focuses on developing advanced computational methods to study atomic structure with extreme precision, supporting next-generation atomic clocks and the search for new physics beyond the Standard Model. He also applies high-performance computing and machine learning to expand what can be calculated and is building online platforms to share state-of-the-art atomic data with the broader scientific community.
					</p>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
